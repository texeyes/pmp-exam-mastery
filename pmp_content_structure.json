    },
    "active_recall": {
      "name": "Active Recall",
      "description": "Test yourself frequently without looking at notes",
      "research_basis": "Testing enhances retention more than re-reading by activating retrieval pathways"
    },
    "interleaving": {
      "name": "Interleaving",
      "description": "Mix different topics and question types during practice",
      "research_basis": "Improves discrimination between concepts and problem-solving by 50%"
    },
    "elaborative_interrogation": {
      "name": "Elaborative Interrogation",
      "description": "Ask 'why' and 'how' questions to connect concepts",
      "research_basis": "Connects new information to prior knowledge, strengthening memory"
    },
